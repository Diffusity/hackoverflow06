<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0b0d"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img"
        android:layout_margin="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foregroundGravity="center_horizontal"/>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:fontFamily="@font/bold"
        android:text="Welcome to Blogsphere"
        android:textColor="#D6DCED"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="#00ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des"
        app:strokeColor="#26FFFFFF"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/reg"
            android:lineSpacingExtra="5dp"
            android:text="BolgWiser is a collection of different geners of blogs which are of top - notch in quality and are trusted by many of the users.The most interesting thing about it is thst user can hear the given blog as audio.As well as there are No Ads &amp; No in-app purchases."
            android:textColor="#A6D6DCED"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/bold"
        android:text="Get set go "
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#fff387"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/extra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/extra"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="A dynamic Blog sharing platform"
        android:textColor="#80D6DCED"
        android:fontFamily="@font/reg"
        android:textStyle="bold"
        android:lineSpacingExtra="5dp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>