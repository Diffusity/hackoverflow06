<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0b0d"
    tools:context=".intro">

    <ImageView
        android:id="@+id/text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img"
        android:layout_margin="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foregroundGravity="center_horizontal"/>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:fontFamily="@font/bold"
        android:text="Blogsphere"
        android:textColor="#D6DCED"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="#00ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des"
        app:strokeColor="#26FFFFFF"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/reg"
            android:lineSpacingExtra="5dp"
            android:text="Get Started with BlogWiser by loggin - in to your account,if you don't have one you just simply create it by clicking on the 'Sign Up' button given below , or if in - case you forgot your password you can reset your password using the 'Forgot Password' button."
            android:textColor="#A6D6DCED"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/bold"
        android:text="Log in"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#fff387"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/bold"
        android:text="Sign up"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        app:backgroundTint="#fff387"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>