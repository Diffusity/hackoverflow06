<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0a0b0d"
    tools:context=".setting">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#D6DCED"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:lottie_rawRes="@raw/line"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/des"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:backgroundTint="#00ffffff"
        app:strokeColor="#26d6dced"
        app:strokeWidth="1dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottie">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/reg"
            android:lineSpacingExtra="5dp"
            android:text="Thank you for choosing BlogWiser as your preferences for a blogging app. I as a developer really appreciate your likings as well as dis - likings .And, thank you for supporting us...!"
            android:textColor="#A6D6DCED"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn"
        app:backgroundTint="#fff387"
        android:layout_margin="32dp"
        android:text="Log Out"
        android:textColor="#0a0b0d"
        android:textSize="18sp"
        android:fontFamily="@font/bold"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/myblogs"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn"
        app:backgroundTint="#fff387"
        android:layout_marginTop="20dp"
        android:text="My Blogs"
        android:textColor="#0a0b0d"
        android:textSize="18sp"
        android:fontFamily="@font/bold"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logout"/>


</androidx.constraintlayout.widget.ConstraintLayout>